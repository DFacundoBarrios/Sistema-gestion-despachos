@model CrudMVCApp.Models.Direccion

@{
    ViewData["Title"] = "Eliminar Dirección";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow-sm">
        <h2 class="fw-bold mb-3 text-dark text-center">BORRAR DIRECCION</h2>

        <div class="card-body">
            <h5 class="mb-3">¿Está seguro que desea eliminar esta dirección?</h5>

            <dl class="row">
                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.Calle)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Calle)</dd>

                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.Ciudad)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Ciudad)</dd>

                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.CodigoPostal)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CodigoPostal)</dd>

                <dt class="col-sm-4 fw-semibold">Persona (ID)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Persona.Id)</dd>
            </dl>

            <!-- Formulario de eliminación con método POST -->
            <form asp-action="Delete" method="post" class="mt-4">
                <!-- Este campo oculta el ID de la dirección para que sea enviado con el formulario -->
                <input type="hidden" asp-for="Id" />
                <!-- Botón para eliminar -->
                <button type="submit" class="btn btn-dark text-white">
                    <i></i> Eliminar
                </button>
                <!-- Botón para volver -->
                <a asp-action="Index" class="btn btn-dark text-white ms-2">
                    <i></i> Volver
                </a>
            </form>
        </div>
    </div>
</div>

