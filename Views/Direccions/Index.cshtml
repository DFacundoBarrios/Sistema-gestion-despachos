@model IEnumerable<CrudMVCApp.Models.Direccion>

@{
    ViewData["Title"] = "ABM DIRECCIONES";
}


<div class="container mt-5 card shadow-sm p-4">
    <h2 class="fw-bold mb-3 text-dark text-center">ABM DIRECCIONES</h2>
    
    
    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-dark text-white">
            <i></i> Nueva Direccion
        </a>
    </div>

    
    @if (Model.Any())
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Calle)</th>
                        <th>@Html.DisplayNameFor(model => model.Ciudad)</th>
                        <th>@Html.DisplayNameFor(model => model.CodigoPostal)</th>
                        <th>Persona (ID)</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.Calle)</td>
                            <td>@Html.DisplayFor(m => item.Ciudad)</td>
                            <td>@Html.DisplayFor(m => item.CodigoPostal)</td>
                            <td>@Html.DisplayFor(m => item.Persona.Id)</td>
                            <td class="text-center">
                                <div class="btn-group" role="group" aria-label="Acciones">
                                    
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-dark text-white">
                                        <i></i> Editar
                                    </a>
                                    
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-dark text-white mx-1">
                                        <i></i> Detalle
                                    </a>
                                    
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-dark text-white">
                                        <i></i> Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            No se encontraron direcciones registradas.
        </div>
    }
</div>
