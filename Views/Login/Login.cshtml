@model CrudMVCApp.Models.Usuario

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="text-dark text-center">
                    <h2>LOGIN</h2>
                </div>
                <div class="card-body bg-light">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                        </div>
                    }

                    <form asp-action="Login" method="post">
                        <div class="mb-4">
                            <label asp-for="nombre" class="form-label text-dark" style="font-weight: 600; text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);">Usuario</label>
                            <div class="input-group">
                                <input asp-for="nombre" class="form-control border-dark" placeholder="Ingrese su usuario" />
                            </div>
                            <span asp-validation-for="nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="nombre" class="form-label text-dark" style="font-weight: 600; text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);">Contraseña</label>
                            <div class="input-group">
                                <input asp-for="Clave" type="password" class="form-control border-dark" placeholder="Ingrese su contraseña" />
                            </div>
                            <span asp-validation-for="Clave" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-dark btn-lg">
                                <i></i>Ingresar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

