@model CrudMVCApp.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0">
            
                    <h1 class="fw-bold mb-3 text-dark text-center">ELIMINAR USUARIO</h1>
                
                <div class="card-body bg-light p-4">
                    <h4>¿Está seguro de que desea eliminar este usuario?</h4>
                    <hr />

                    <div class="card p-4 mb-4">
                        <dl class="row">
                            <dt class="col-sm-3 fw-semibold">
                                @Html.DisplayNameFor(model => model.nombre)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.nombre)
                            </dd>
                            <dt class="col-sm-3 fw-semibold">
                                @Html.DisplayNameFor(model => model.Tipo)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Tipo)
                            </dd>
                        </dl>

                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-dark text-white w-100">Eliminar</button>
                            <a asp-action="Index" class="btn btn-dark text-white w-100 mt-2">Volver</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
