@model CrudMVCApp.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0">
               
                    <h1 class="fw-bold mb-3 text-dark text-center">CREAR USUARIO NUEVO</h1>
                
                <div class="card-body bg-light p-4">
                    <h4 class="fw-bold mb-3 text-dark text-center">DATOS DEL USUARIO</h4>
                    <hr />
                    <form asp-action="Create" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="nombre" class="form-label">Nombre de Usuario</label>
                            <input asp-for="nombre" class="form-control"/>
                            <span asp-validation-for="nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Clave" class="form-label">Contrase√±a</label>
                            <input asp-for="Clave" type="password" class="form-control" />
                            <span asp-validation-for="Clave" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Tipo" class="form-label">Tipo o rol del usuario</label>
                            <select asp-for="Tipo" class="form-select">
                                <option value="">Seleccione</option>
                                <option value="usuario">Usuario</option>
                                <option value="admin">Administrador</option>
                            </select>
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-dark text-white">Crear</button>
                            <a asp-action="Index" class="btn btn-dark text-white">Volver a la lista</a>
                        </div>
                    </form>
                </div>
            </>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
