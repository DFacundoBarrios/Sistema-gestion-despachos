@model CrudMVCApp.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0">

                    <h1 class="fw-bold mb-3 text-dark text-center">EDITAR</h1>
                
                <div class="card-body bg-light p-4">
                    <h4 class="fw-bold mb-3 text-dark text-center">USUARIO</h4>
                    <hr />
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="nombre" class="form-label">Nombre de Usuario</label>
                            <input asp-for="nombre" class="form-control" />
                            <span asp-validation-for="nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Clave" class="form-label">Contrase√±a</label>
                            <input asp-for="Clave" type="password" class="form-control" />
                            <span asp-validation-for="Clave" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Tipo" class="form-label">Tipo de Usuario</label>
                            <select asp-for="Tipo" class="form-select">
                                <option value="usuario">Usuario</option>
                                <option value="admin">Administrador</option>
                            </select>
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-dark text-white w-100">Guardar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-dark text-white">Volver</a>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
