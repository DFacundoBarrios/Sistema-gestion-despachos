@model IEnumerable<CrudMVCApp.Models.Usuario>

@{
    ViewData["Title"] = "ABM Usuarios";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h2 class="fw-bold mb-3 text-dark text-center">ABM USUARIOS</h2>
        
       
        <div class="card-body bg-light p-4">
            <div class="d-flex justify-content-end mb-3">
                <a asp-action="Create" class="btn btn-dark">Crear Usuario</a>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark text-white btn-sm me-1">
                                        <i></i>Editar
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark text-white btn-sm me-1">
                                        <i></i>Detalle
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-dark text-white btn-sm me-1">
                                        <i></i>Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
