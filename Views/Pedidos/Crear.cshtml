@model CrudMVCApp.Models.Pedido

@{
    ViewData["Title"] = "Nuevo Pedido";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-dark text-white text-center">
            <h3 class="mb-0">Nuevo Pedido</h3>
        </div>
        <div class="card-body bg-light p-4">
            <form asp-action="Crear" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Usuario" class="form-label text-dark">Nombre de Usuario</label>
                    <input asp-for="Usuario" class="form-control border-dark text-dark" required />
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Detalles" class="form-label text-dark">Detalles</label>
                    <textarea asp-for="Detalles" class="form-control border-dark text-dark" rows="4" required></textarea>
                    <span asp-validation-for="Detalles" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-dark text-white px-4 py-2">
                        Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-dark text-white px-4 py-2">
                        Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

