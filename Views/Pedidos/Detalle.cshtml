@model CrudMVCApp.Models.Pedido

@{
    ViewData["Title"] = "Detalle del Pedido";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4">
            <h2 class="fw-bold mb-3 bg-dark text-white text-center">DETALLE PEDIDO @Model.id</h2>
        
        <div class="card-body bg-light p-4">

            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="fw-bold mb-3 text-dark text-center">INFO DETALLADA DEL PEDIDO</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">ID:</dt>
                                <dd class="col-sm-8">@Model.id</dd>

                                <dt class="col-sm-4">Fecha:</dt>
                                <dd class="col-sm-8">@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</dd>

                                <dt class="col-sm-4">Usuario:</dt>
                                <dd class="col-sm-8">@Model.Usuario</dd>

                                <dt class="col-sm-4">Estado:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Confirmado)
                                    {
                                        <span class="badge bg-dark text-white">Confirmado</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-dark text-white">Pendiente</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="fw-bold mb-3 text-dark text-center">INFO DETALLADA DEL CLIENTE</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Nombre:</dt>
                                <dd class="col-sm-8">@Model.Cliente?.Nombre @Model.Cliente?.Apellido</dd>

                                <dt class="col-sm-4">DNI:</dt>
                                <dd class="col-sm-8">@Model.Cliente?.Dni</dd>

                                <dt class="col-sm-4">CUIT:</dt>
                                <dd class="col-sm-8">@Model.Cliente?.Cuit</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4 border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="fw-bold mb-3 text-dark text-center">PRODUCTOS DESPACHADOS</h5>
                </div>
                <div class="card-body">
                    @if (Model.Detalles.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Producto</th>
                                        <th>Descripción</th>
                                        <th class="text-center">Cantidad</th>
                                        <th class="text-end">Precio Unit.</th>
                                        <th class="text-end">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detalle in Model.Detalles)
                                    {
                                        <tr>
                                            <td>@detalle.Producto?.Nombre</td>
                                            <td>@detalle.Producto?.Descripcion</td>
                                            <td class="text-center">@detalle.Cantidad</td>
                                            <td class="text-end">$@detalle.PrecioUnitario.ToString("N2")</td>
                                            <td class="text-end">$@detalle.Subtotal.ToString("N2")</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <th colspan="2">Total:</th>
                                        <th class="text-center">@Model.TotalProductos productos</th>
                                        <th></th>
                                        <th class="text-end">$@Model.Total.ToString("N2")</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            No hay existencias de productos
                        </div>
                    }
                </div>
            </div>

            <div class="text-end">
                <a asp-action="Index" class="btn btn-dark text-white px-4 py-2">
                    Volver al listado
                </a>
            </div>
        </div>
    </div>
</div>

