@model List<CrudMVCApp.Models.Pedido>

@{
    ViewData["Title"] = "Listado de Pedidos";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h2 class="fw-bold mb-3 text-dark text-center">LISTA DE PEDIDOS</h2>
        
        <div class="card-body bg-light p-4">

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Success"]
                </div>
            }

            <form method="get" asp-action="Index" class="mb-4">
                <div class="input-group">
                    <input type="text" name="buscarUsuario" placeholder="Buscar por usuario" class="form-control border-dark" />
                    <button type="submit" class="btn btn-dark">
                        <i></i> Buscar
                    </button>
                </div>
            </form>

            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Cliente</th>
                                <th>Usuario</th>
                                <th>Fecha</th>
                                <th>Total</th>
                                <th>Estado</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pedido in Model)
                            {
                                <tr>
                                    <td>@pedido.id</td>
                                    <td>@pedido.Cliente?.Nombre @pedido.Cliente?.Apellido</td>
                                    <td>@pedido.Usuario</td>
                                    <td>@pedido.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>$@pedido.Total.ToString("N2")</td>
                                    <td>
                                        @if (pedido.Confirmado)
                                        {
                                            <span class="badge bg-dark text-white">Confirmado</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-dark text-white">Pendiente</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Detalle" asp-route-id="@pedido.id" class="btn btn-sm bg-dark text-white">
                                            <i></i> Ver Detalle
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No se encontraron pedidos.
                </div>
            }
        </div>
    </div>
</div>

