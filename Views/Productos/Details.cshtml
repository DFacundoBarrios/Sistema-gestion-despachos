@model CrudMVCApp.Models.Producto

@{
    ViewData["Title"] = "Detalle del Producto";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h3 class="fw-bold mb-3 text-dark text-center">DETALLE DEL PRODUCTO</h3>

        <dl class="row">
            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.PrecioCompra)
            </dt>
            <dd class="col-sm-9">
                $@Html.DisplayFor(model => model.PrecioCompra)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.PrecioVta)
            </dt>
            <dd class="col-sm-9">
                $@Html.DisplayFor(model => model.PrecioVta)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Stock)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Stock)
            </dd>
        </dl>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-dark text-white me-2">
                <i></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-dark text-white">
                <i></i> Volver
            </a>
        </div>
    </div>
</div>
