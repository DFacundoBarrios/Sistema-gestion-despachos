@model IEnumerable<CrudMVCApp.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h2 class="fw-bold mb-3 text-dark text-center">ABM PRODUCTOS</h2>
        
        <div class="mb-3 text-end">
            <a asp-action="Create" class="btn btn-dark text-white">
                <i></i> Nuevo Producto
            </a>
        
        </div>
        <div class="card-body">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                            <th class="text-end">@Html.DisplayNameFor(model => model.PrecioCompra)</th>
                            <th class="text-end">@Html.DisplayNameFor(model => model.PrecioVta)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.Stock)</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                                <td class="text-end">$@Html.DisplayFor(modelItem => item.PrecioCompra)</td>
                                <td class="text-end">$@Html.DisplayFor(modelItem => item.PrecioVta)</td>
                                <td class="text-center">
                                    @if (item.Stock <= 5)
                                    {
                                        <span class="badge bg-dark text-white whiter">@item.Stock</span>
                                    }
                                    else if (item.Stock <= 10)
                                    {
                                        <span class="badge bg-dark text-white">@item.Stock</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-dark text-white">@item.Stock</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark text-white btn-sm me-1">
                                            <i></i>Editar
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark text-white btn-sm me-1">
                                            <i></i>Detalle
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-dark text-white btn-sm me-1">
                                            <i></i>Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
